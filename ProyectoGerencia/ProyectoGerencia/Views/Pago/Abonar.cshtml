@model ProyectoGerencia.ViewModels.Pago.AbonarVM
@{
    ViewBag.Title = "Abonar";
}

<h2>Abonar</h2>
<form method="post">

    <div class="form-group saldo-pendiente">
        <label for="saldo" class="col-lg-4 control-label">Saldo pendiente: ₡ @Model.SaldoTotal</label>
        @*<div class="col-lg-8">
                <p class="monto"><strong><span>###.###,##</span></strong></p>
            </div>*@
    </div>
    <div class="form-group">
        <label for="monto" class="col-lg-4 control-label">Monto a abonar: ₡</label>
        <div class="col-lg-8">
            @Html.EditorFor(model => model.MontoAbonar, new { htmlAttributes = new { @class = "form-control", @name = "abono", @id = "abono", @placeholder = "###.##" } })
            @Html.ValidationMessageFor(model => model.MontoAbonar, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
            @Html.ActionLink("Regresar", "ListaPersonaJuridica", "Pago", new { area = "" }, new { @class = "btn btn-primary" })
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>